{
    "variables" : {
        "region" : "ap-south-1",
        "aws_access_key_id": "{{ env `AWS_ACCESS_KEY_ID` }}",
        "aws_secret_access_key": "{{ env `AWS_SECRET_ACCESS_KEY` }}",
        "SUPER_SECRET": "{{env `DJANGO_SECRET_KEY`}}",
        "source_ami" : "ami-079b5e5b3971bd10d" 
    },
    "builders" : [
        {
            "type" : "amazon-ebs",
            "profile" : "default",
            "region" : "{{user `region`}}",
            "access_key": "{{ user `AWS_ACCESS_KEY_ID` }}",
            "secret_key": "{{ user `AWS_SECRET_ACCESS_KEY` }}",
            "vpc_id": "{{ user `vpc_id` }}",
            "subnet_id": "{{ user `subnet_id` }}",
            "instance_type" : "t2.micro",
            "source_ami" : "{{ user `source_ami` }}",
            "ssh_username" : "ec2-user",
            "ssh_timeout": "2m",
            "ami_name" : "django-app-{{ user `github.sha` }}",
            "ami_description" : "Amazon Linux Image with \"django\" application installed",
            "run_tags" : {
                "Name" : "packer-builder-docker"
            },
            "ami_block_device_mappings": [
              {
                "delete_on_termination": true,
                "device_name": "/dev/sda1",
                "volume_size": 60,
                "volume_type": "gp2"
              }
            ],
            "tags" : {
                "Tool" : "Packer",
                "Author" : "user"
            }
        }
    ],
    "provisioners" : [
        {
            "type" : "shell",
            "execute_command": "{{.Vars}} sudo -E -S bash '{{.Path}}'",
            "scripts": [
                "./setup.sh"
            ],
            "environment_vars": [
                "VARS={{user `aws_access_key_id`}}:{{user `aws_secret_access_key`}}",
                "PATH=/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin",
                "PACKER_BUILDER_TYPE=amazon-ebs",
                "PACKER_BUILDER_AWS_ACCESS_KEY={{user `AWS_ACCESS_KEY_ID`}}",
                "PACKER_BUILDER_AWS_SECRET_KEY={{user `AWS_SECRET_ACCESS_KEY`}}",
                "PACKER_BUILDER_AWS_REGION={{user `region`}}",
                "PACKER_BUILDER_AWS_VPC_ID={{user `vpc_id`}}",
                "PACKER_BUILDER_AWS_SUBNET_ID={{user `subnet_id`}}",
                "PACKER_BUILDER_AWS_INSTANCE_TYPE=t2.micro",
                "PACKER_BUILDER_AWS_SOURCE_AMI={{user `source_ami`}}",
                "SUPER_SECRET={{user `super_secret`}}"
            ]
        }
    ]
}